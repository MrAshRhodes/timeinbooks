# Cloudflare Pages custom headers
# https://developers.cloudflare.com/pages/configuration/headers/

# All pages - security headers
/*
  X-Content-Type-Options: nosniff
  X-Frame-Options: DENY
  Referrer-Policy: strict-origin-when-cross-origin
  Permissions-Policy: camera=(), microphone=(), geolocation=()

# HTML pages - short cache, always revalidate
/
  Cache-Control: public, max-age=300, must-revalidate

/index.html
  Cache-Control: public, max-age=300, must-revalidate

# CSS and JS - cache for 1 day (content changes with deploys)
/*.css
  Cache-Control: public, max-age=86400, must-revalidate

/*.js
  Cache-Control: public, max-age=86400, must-revalidate

# JSON quote data chunks - cache for 1 day with revalidation
/data/*.json
  Cache-Control: public, max-age=86400, must-revalidate

# Icons and images - long cache
/favicon.ico
  Cache-Control: public, max-age=604800, immutable
/favicon.svg
  Cache-Control: public, max-age=604800, immutable
/favicon-16x16.png
  Cache-Control: public, max-age=604800, immutable
/favicon-32x32.png
  Cache-Control: public, max-age=604800, immutable
/apple-touch-icon.png
  Cache-Control: public, max-age=604800, immutable
/icon-192x192.png
  Cache-Control: public, max-age=604800, immutable
/icon-512x512.png
  Cache-Control: public, max-age=604800, immutable

# Manifest - moderate cache
/manifest.json
  Cache-Control: public, max-age=86400, must-revalidate

# Service worker - no cache (must always be fresh)
/sw.js
  Cache-Control: public, max-age=0, must-revalidate
